package com.elixirline.service.elixirline_backend.vinificationprocessmanagement.winemaking.domain.model.valueobjects.bottlingstage;

@Embeddable
public record TotalVolume(Double volume) {
    public TotalVolume {
        if (volume != null && volume < 0) {
            throw new IllegalArgumentException("Total volume cannot be less than zero."); // Validación
        }
    }

    @JsonValue
    public Double getVolume() {
        return volume; // Método para obtener el volumen total
    }
}
