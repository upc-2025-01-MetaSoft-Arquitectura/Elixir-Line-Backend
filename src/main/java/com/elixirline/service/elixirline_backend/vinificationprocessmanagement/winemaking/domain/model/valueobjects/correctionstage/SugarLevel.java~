package com.elixirline.service.elixirline_backend.vinificationprocessmanagement.winemaking.domain.model.valueobjects.correction;

import com.fasterxml.jackson.annotation.JsonValue;
import jakarta.persistence.Embeddable;

@Embeddable
public record SugarLevel(Double sugarLevel) {
    public SugarLevel {
        if (sugarLevel != null && sugarLevel < 0) {
            throw new IllegalArgumentException("Sugar level cannot be less than zero.");
        }
    }

    @JsonValue
    public Double getSugarLevel() {
        return sugarLevel;
    }
}